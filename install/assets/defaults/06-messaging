#!/usr/bin/with-contenv bash

CONTAINER_ENABLE_MESSAGING=${CONTAINER_ENABLE_MESSAGING:-"TRUE"}
CONTAINER_MESSAGING_BACKEND=${CONTAINER_MESSAGING_BACKEND:-"msmtp"}
SMTP_AUTO_FROM=${SMTP_AUTO_FROM:-"TRUE"}
SMTP_DOMAIN=${SMTP_DOMAIN:-"docker"}
SMTP_HOST=${SMTP_HOST:-"postfix-relay"}
SMTP_MAILDOMAIN=${SMTP_MAILDOMAIN:-"local"}
SMTP_PORT=${SMTP_PORT:-"25"}
SMTP_STARTTLS=${SMTP_STARTTLS:-"off"}
SMTP_TLS=${SMTP_TLS:-"off"}
SMTP_TLSCERTCHECK=${SMTP_TLSCERTCHECK:-"off"}